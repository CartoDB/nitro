{
  "name": "nitro",
  "version": "0.0.0",
  "description": "PoC - Bootstrap your APIs taking advantage of the best community modules",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/nitro.git"
  },
  "keywords": [
    "carto",
    "APIs",
    "web"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/nitro/issues"
  },
  "homepage": "https://github.com/CartoDB/nitro#readme",
  "engines": {
    "node": ">=7.0.0"
  },
  "directories": {
    "test": "test",
    "benchmark": "benchmark"
  },
  "dependencies": {
    "bunyan": "1.8.5",
    "koa": "2.0.0-alpha.5",
    "meow": "3.7.0",
    "node-fetch": "1.6.3",
    "node-statsd": "0.1.1",
    "node-uuid": "1.4.7",
    "read-pkg-up": "2.0.0"
  },
  "scripts": {
    "benchmark": "node lib/benchmark",
    "build": "babel src -d lib --source-maps inline",
    "coverage": "istanbul cover _mocha lib/test/ -- --recursive -r lib/test/setup",
    "example": "node lib/example",
    "lint": "standard \"src/**/*.js\"",
    "postinstall": "npm run build",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "mocha --recursive -r source-map-support/register -r lib/test/setup lib/test/",
    "test:watch": "npm run test -- -w",
    "version": "npm run benchmark -- -r && git add -A benchmark",
    "watch": "babel src -d lib --source-maps inline --watch"
  },
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-plugin-transform-async-to-generator": "6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.22.0",
    "istanbul": "0.4.5",
    "koa-router": "7.1.0",
    "mocha": "3.2.0",
    "prepend-file": "1.3.1",
    "sinon": "1.17.7",
    "source-map-support": "0.4.10",
    "standard": "8.6.0"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-async-to-generator"
    ]
  },
  "standard": {
    "globals": [
      "__lib",
      "__example",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
