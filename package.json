{
  "name": "nitro",
  "version": "0.0.0",
  "description": "PoC - Bootstrap your APIs taking advantage of the best community modules",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/nitro.git"
  },
  "keywords": [
    "carto",
    "APIs",
    "web"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/nitro/issues"
  },
  "homepage": "https://github.com/CartoDB/nitro#readme",
  "engines": {
    "node": ">=7.0.0"
  },
  "directories": {
    "test": "test",
    "benchmark": "benchmark"
  },
  "dependencies": {
    "bunyan": "1.8.5",
    "koa": "2.0.0-alpha.5",
    "koa-router": "7.0.1",
    "meow": "3.7.0",
    "node-fetch": "1.6.3",
    "node-statsd": "0.1.1",
    "node-uuid": "1.4.7",
    "read-pkg-up": "2.0.0"
  },
  "scripts": {
    "example": "node --harmony-async-await example",
    "benchmark": "node --harmony-async-await benchmark",
    "coverage": "istanbul cover _mocha test/ -- --harmony-async-await --recursive -r test/setup",
    "lint": "standard index.js \"lib/**/*.js\" \"test/**/*.js\"",
    "pretest": "npm run lint",
    "start": "node .",
    "test": "mocha --harmony-async-await --recursive -r test/setup test/",
    "test:watch": "npm run test -- -w",
    "preversion": "npm test",
    "version": "npm run benchmark -- -r && git add -A benchmark",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "prepend-file": "1.3.1",
    "sinon": "1.17.6",
    "standard": "8.6.0"
  },
  "standard": {
    "globals": [
      "__lib",
      "__example",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
